<Page x:Class="PharamarcyService.Pages.Client.OrderInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharamarcyService.Pages.Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Чек заказа" Style="{StaticResource MainPageStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <WebBrowser Name="WBDoc" Margin="5"></WebBrowser>
        
        <Button Grid.Row="1" HorizontalAlignment="Right" Height="35" Content="Отправить на печать" Name="BtnPrint" Click="BtnPrint_Click" Padding="15 5"></Button>
        <Button Grid.Row="1" HorizontalAlignment="Left" Height="35" Content="Вернуться в меню" Name="BtnBack" Click="BtnBack_Click" Padding="15 5"></Button>
        
    </Grid>
</Page>
