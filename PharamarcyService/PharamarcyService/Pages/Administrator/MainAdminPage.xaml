<Page x:Class="PharamarcyService.Pages.Administrator.MainAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharamarcyService.Pages.Administrator"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="Главная страница | Администратор" Style="{StaticResource MainPageStyle}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="200" Content="Список препаратов" Name="BtnListOfProducts" Click="BtnListOfProducts_Click"></Button>
            <Button Width="200" Content="Список поставщиков" Name="BtnListOfSupplier" Click="BtnListOfSupplier_Click"></Button>
            <Button Width="200" Content="Список заказов" Name="BtnListOfOrders" Click="BtnListOfOrders_Click"></Button>
            <Button Width="200" Content="Оформить заказ для поставщиков" Name="BtnListOfSuppliersProduct" Click="BtnListOfSuppliersProduct_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
