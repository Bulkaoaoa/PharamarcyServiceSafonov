<Page x:Class="PharamarcyService.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PharamarcyService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="Авторизация" Style="{StaticResource MainPageStyle}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Width="50" TextAlignment="Right" >Логин:</TextBlock>
                <TextBox  Width="200" Name="TxtBoxLogin"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock   VerticalAlignment="Center" Width="50" TextAlignment="Right" >Пароль:</TextBlock>
                <PasswordBox Width="200" Name="PassBoxPassword"></PasswordBox>
            </StackPanel>
            <Button Width="200" Name="BtnLogin" HorizontalAlignment="Right" Click="BtnLogin_Click">Войти</Button>
            <Button Width="200" Name="BtnRegistration" HorizontalAlignment="Right" Click="BtnRegistration_Click" Style="{StaticResource BtnStyleSecondary}">Регистрация</Button>
        </StackPanel>
    </Grid>
</Page>


